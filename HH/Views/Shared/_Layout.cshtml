<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-info"     >
        <div class="container">
            @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
           <a href="http://localhost:49861/"><img src="~/Images/Logo.png" alt="H2" width="50" height="50"></a> 
            <button type="button" class="navbar-toggler " data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" ></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between ">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Exercise", "Index", "Exercise", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Workout Routines", "Index", "WorkoutRoutine", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div  style="width:100%;margin-top:3px">
        @RenderBody()
        <hr />
        <footer>
            <table align="right" style=" padding:20px">
                <tr>
                    <td style="padding:20px" >&copy; @DateTime.Now.Year - Health Harmony</td>
                    <td style="padding:20px" >@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</td>
                    <td style="padding:20px">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</td>
                </tr>
            </table>
           



        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
